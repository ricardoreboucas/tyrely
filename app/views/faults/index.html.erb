<h1>Listing faults</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @faults.each do |fault| %>
  <tr>
    <td><%=h fault.name %></td>
    <td><%= link_to 'Show', fault %></td>
    <td><%= link_to 'Edit', edit_fault_path(fault) %></td>
    <td><%= link_to 'Destroy', fault, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New fault', new_fault_path %>